# finds out, if available)
bar {
        #status_command i3status
 	#status_command ~/.i3/i3status_wrapper.sh
	 status_command ~/.i3/conky-wrapper	
	position top
        font pango:droid sans, FontAwesome 10

	colors {
		background $bgcolor
		statusline $fgcolor
		separator $bgcolor
				#border backgr. text
		focused_workspace $fgcolor $fgcolor $bgcolor
		active_workspace $bgcolor $bgcolor #999999
