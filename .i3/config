assign [class="^urxvt$" instance="^ncmpcpp$"] → term
assign [class="Firefox"] → web
assign [class="xv/mplayer"] → video
assign [class="Virtualbox"] → 6
assign [class="Zathura"] → work
assign [class="libreoffice-writer"] → work

##WALLPAPER

exec --no-startup-id xrandr --output Virtual1 --mode 1680x1050
exec nitrogen --restore &

##COMPSITE

exec compton -bc -r 3 -l -4 -t -4 --shadow-exclude '_GTK_FRAME_EXTENTS@:c' --clear-shadow

