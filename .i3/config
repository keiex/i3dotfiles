##VARS

set $fgcolor #c5c8c6 
set $bgcolor #1d1f21

##BORDERS

new_window pixel

for_window [class="^.*"] border pixel 1

#colors

# class					 border	 backgr.	  text 	    indicator
client.focused 				$fgcolor $fgcolor $bgcolor $fgcolor
client.focused_inactive 		$bgcolor $bgcolor $fgcolor $bgcolor
client.unfocused 			$bgcolor $bgcolor $fgcolor $bgcolor
client.urgent 				#383a3b #383a3b #ee0000 #383a3b

client.background 		#1d1d1d

##APPLICATIONS

bindsym $mod+x exec firefox

#GAPS

gaps inner 20
gaps outer 20

workspace web gaps inner 0
workspace web gaps outer 0

#gaps mode
mode "setgap" {
	bindsym q	gaps inner current set 0;gaps outer all set 0
	bindsym e	gaps inner current set 20;gaps outer all set 20
	bindsym w	gaps inner current minus 2
	bindsym s	gaps inner current plus 2
	bindsym a	gaps outer current minus 2
	bindsym d	gaps outer current plus 2

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+g mode "setgap"

##TEST

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show


##KEYBOARD

exec setxkbmap -layout 'br'

